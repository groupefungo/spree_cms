<%= render :partial => 'spree/admin/cms_sections/section_tabs', :locals => {:current => 'contents'} %>

<%= render :partial => 'spree/shared/error_messages', :locals => {:target => @cms_content} %>

<% content_for :page_actions do %>
    <li><%= button_link_to t(:back_to_section_contents_list), admin_cms_section_cms_contents_url(@cms_section), :icon => 'icon-arrow-left' %></li>
<% end %>

<%= form_for [:admin, @cms_section, @cms_content], :html => {:multipart => true} do |f| %>
    <fieldset>
      <legend align="center">Modification de contenu de la section CMS'<%= @cms_section.code %>'</legend>

      <%= render :partial => 'form', :locals => { :f => f } %>

      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button t(:update), 'icon-refresh' %>
        <span class="or"><%= t(:or) %></span>
        <%= link_to_with_icon 'icon-remove', t(:cancel), admin_cms_section_cms_contents_url(@cms_section), :id => 'cancel_link', :class => 'button' %>
      </div>

    </fieldset>
<% end %>