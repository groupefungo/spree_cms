<%= javascript_include_tag "http://js.nicedit.com/nicEdit-latest.js" %>
<%= javascript_tag do %>
    bkLib.onDomLoaded(nicEditors.allTextAreas);
<% end %>
<%= stylesheet_link_tag 'spree_cms/admin/cms_contents' %>

<div data-hook="admin_section_content_form_fields">
  <div class="five columns alpha">
    <div class="field">
      <%= f.label 'Title' %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label 'Image' %>
      <br>
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="five columns omega">
    <div class="field">
      <%= f.label 'Date available' %>
      <br>
      <%= f.text_field :date_available, :value => datepicker_field_value(@cms_content.date_available), :class => 'datepicker' %>
    </div>
    <div class="field">
      <% if @cms_content.image_file_name %>
          <img src="/spree/contenus/<%= @cms_content.id %>/normal/<%= @cms_content.image_file_name %>"/>
      <% end %>
    </div>
  </div>
  <div class="field alpha thirteen columns">
    <%= f.label 'Sequence' %>
    <br>
    <%= f.text_field :seq %>
  </div>
  <div class="field alpha thirteen columns">
    <%= f.label 'Text' %>
    <br>
    <%= f.text_area :text, :rows => 8, :class => 'fullwidth' %>
  </div>
</div>

<div class="clear"></div>

<%= f.hidden_field :cms_section_id, value: @cms_section.id %>

<% javascript_tag do %>

<% end %>