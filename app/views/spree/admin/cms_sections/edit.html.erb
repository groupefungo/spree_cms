<%= render :partial => 'spree/admin/cms_sections/section_tabs', :locals => {:current => 'section edit'} %>
<%= render :partial => 'spree/shared/error_messages', :locals => {:target => @section} %>

<h1>section CMS</h1>

<%= form_for [:admin, @section], :method => :put, :html => {:multipart => true} do |f| %>

    <fieldset class="no-border-top">
      <%= f.field_container :code do %>
          <%= f.label :code, t(:code) %> <span class="required">*</span><br/>
          <%= f.text_field :code, :class => 'fullwidth title' %>
          <%= f.error_message_on :code %>
      <% end %>

      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </fieldset>
<% end %>